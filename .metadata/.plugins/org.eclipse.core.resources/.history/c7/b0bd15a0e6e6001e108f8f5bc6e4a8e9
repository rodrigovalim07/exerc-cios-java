package entidades;

import java.time.Instant;
import java.util.ArrayList;
import java.util.List;

import enums.StatusPedido;

public class Pedido {

	private Instant momento;
	private StatusPedido status;
	
	private List<ItemDoPedido> item = new ArrayList<>();
	
	public Pedido() {
	}

	public Pedido(Instant agora, StatusPedido status) {
		momento = agora;
		this.status = status;
	}

	public Instant getMomento() {
		return momento;
	}

	public void setMomento(Instant momento) {
		this.momento = momento;
	}

	public StatusPedido getStatus() {
		return status;
	}

	public void setStatus(StatusPedido status) {
		this.status = status;
	}
	
	public void addItem(ItemDoPedido itens) {
		item.add(itens);
	}
	
	public void removeItem(ItemDoPedido itens) {
		item.remove(itens);
	}
	
	public double total() {
		double soma = 0;
		for (ItemDoPedido c : item) {
			soma = c.subTotal();
		}
		return soma;
	}
}
